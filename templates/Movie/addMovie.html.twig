{% extends"base.html.twig" %}

{% block title %}Movies - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/assets/css/mystyleForMovie.css">
{% endblock %}

{% block body %}
    <h1>Ajout d'un film</h1>

    <form name="addMovie" method="post" action="?controller=Movie&action=AddMovie">
        <input class="form-control" id="Name" type="text" name="Name" placeholder="Name" required>
        <input class="form-control" id="Poster" type="text" name="Poster" placeholder="Link Poster" required>
        <input class="form-control" id="Origin" type="text" name="Origin" placeholder="Origin">
        <input class="form-control" id="VO" type="text" name="VO" placeholder="VO">
        <input class="form-control" id="Actors" type="text" name="Actors" placeholder="Actors">
        <input class="form-control" id="Director" type="text" name="Director" placeholder="Director">
        <input class="form-control" id="Genre" type="text" name="Genre" placeholder="Genre">
        <input class="form-control" id="ReleaseDate" type="date" name="ReleaseDate" placeholder="ReleaseDate">
        <input class="form-control" id="Production" type="text" name="Production" placeholder="Production">
        <input class="form-control" id="Runtime" type="number" name="Runtime" placeholder="Runtime" required>
        <input class="form-control" id="Trailer" type="text" name="Trailer" placeholder="Link Trailer">
        <input class="form-control" id="Nomination" type="text" name="Nomination" placeholder="Nomination">
        <input class="form-control" id="Synopsis" type="text" name="Synopsis" placeholder="Synopsis" required>
        <input class="form-control" id="DVD" type="checkbox" name="DVD">

        <input class="btn btn-primary mb-2" type="submit" value="Submit Movie">
    </form>
{% endblock %}

