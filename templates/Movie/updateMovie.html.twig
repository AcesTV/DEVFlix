{% extends"base.html.twig" %}

{% block title %}Movies - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/assets/css/mystyleForMovie.css">
{% endblock %}

{% block body %}
    <h1>Update de <a href="?controller=movie&action=showonemovie&param={{ movie.ID_MOVIE }}">{{ movie.NAME }}</a></h1>

    <form name="updateMovie" method="post" action="?controller=Movie&action=UpdateMovie&param={{ movie.ID_MOVIE }}">
        <div class="form-row">
            <div class="col-3">
                <input class="form-control" id="Name" type="text" name="Name" placeholder="Name" value="{{ movie.NAME }}" required>
            </div>
            <div class="col">
                <input class="form-control" id="Poster" type="text" name="Poster" placeholder="Link Poster" value="{{ movie.POSTER }}" required>
            </div>
            <div class="col">
                <input class="form-control" id="Trailer" type="text" name="Trailer" placeholder="Link Trailer" value="{{ movie.TRAILER }}">
            </div>
        </div>

        <div class="form-row">
            <div class="col-3">
                <input class="form-control" id="Origin" type="text" name="Origin" placeholder="Origin" value="{{ movie.ORIGIN }}">
            </div>
            <div class="col">
                <input class="form-control" id="VO" type="text" name="VO" placeholder="VO" value="{{ movie.VO }}">
            </div>
            <div class="col">
                <input class="form-control" id="Genre" type="text" name="Genre" placeholder="Genre" value="{{ movie.GENRE }}">
            </div>
            <div class="col">
                <input class="form-control" id="ReleaseDate" type="date" name="ReleaseDate" placeholder="ReleaseDate" value="{{ movie.RELEASE_DATE }}">
            </div>
            <div class="col">
                <input class="form-control" id="Runtime" type="number" name="Runtime" placeholder="Runtime" value="{{ movie.RUNTIME }}" required>
            </div>
        </div>

        <div class="form-row">
            <div class="col">
                <input class="form-control" id="Actors" type="text" name="Actors" placeholder="Actors" value="{{ movie.ACTORS }}">
            </div>
            <div class="col">
                <input class="form-control" id="Director" type="text" name="Director" placeholder="Director" value="{{ movie.DIRECTOR }}">
            </div>
            <div class="col">
                <input class="form-control" id="Production" type="text" name="Production" placeholder="Production" value="{{ movie.PRODUCTION }}">
            </div>
        </div>

        <div class="form-row">
            <div class="col">
                <input class="form-control" id="Nomination" type="text" name="Nomination" placeholder="Nomination" value="{{ movie.NOMINATION }}">
            </div>
            <div class="col">
                <input class="form-control" id="Synopsis" type="text" name="Synopsis" placeholder="Synopsis" value="{{ movie.SYNOPSIS }}" required>
            </div>
            <div class="col">
                <input class="form-control" id="DVD" type="checkbox" name="DVD" value="oui"{% if movie.DVD %} checked {% endif %}>
            </div>
        </div>

        <div class="form-row">
            <div class="col">
                <button class="btn btn-primary mb-2" type="submit">Submit Movie</button>
            </div>
        </div>

    </form>
{% endblock %}

