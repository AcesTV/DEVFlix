<!doctype html>
<html lang="fr">
<head>
    <meta name="viewport" content="width=device-width" initial-scale=1/>
    <link rel="stylesheet" href="/assets/css/MyStyleForUsers.css">
</head>

<a href="/login">Retourner sur la page de connexion</a>

<body>

<div id="ResetPassword">

    <h2 class="TextCenter">Réinitialiser le mot de passe</h2>

    <h4 class="TextCenter msg-err">{{ MSG_ERR }}</h4>
    <h4 class="TextCenter msg-succes">{{ MSG_SUCCES }}</h4>

    <form name="ResetPassword" method="post" action="/resetpassword">
        <input type="email" name="Email" placeholder="Adresse Email" value="{{ RecoveryEmail }}">

        {% if NiveauInterface == 1 %}
            <label for="CleRecovery">Une clé temporaire vous à été envoyé par mail</label>
            <input type="string" name="CleRecovery" placeholder="Clé envoyé par mail">
        {% endif %}

        {% if NiveauInterface >= 2 %}
            <input type="password" name="Password" placeholder="Mot de passe">
            <input type="password" name="PasswordCheck" placeholder="Vérifier le mot de passe">
        {% endif %}

        <input class="btn-center" type="submit" value="{{ ValeurBouton }}">
    </form>


</div>

</body>
</html>